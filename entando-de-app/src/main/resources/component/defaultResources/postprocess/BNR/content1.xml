<content>
	<description>Sample Banner</description>
	<typeCode>BNR</typeCode>
	<typeDescription>Banner</typeDescription>
	<mainGroup>free</mainGroup>
	<attributes>
		<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbTextAttribute">
			<name>title</name>
			<type>Text</type>
			<value>Hello, world!</value>
			<roles>
				<role>jacms:title</role>
			</roles>
		</attribute>

		<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbHypertextAttribute">
			<name>abstract</name>
			<type>Hypertext</type>
			<htmlValue><![CDATA[<p>This is a template for banner content.</p>]]></htmlValue>
		</attribute>

		<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbResourceAttribute">
			<type>Image</type>
			<name>image</name>
			<resource>
				<text>Entando at Plan</text>
				<path>/test-image-rest/resources/cms/images/sample-image-1_d0.jpg</path>
				<resourceId>entandoAtPlan</resourceId>
				<restResourcePath>http://localhost:8080/test-image-rest/api/rs/en/jacms/image?id=entandoAtPlan</restResourcePath>
			</resource>						
		</attribute>		

		<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbLinkAttribute">
			<name>link</name>
			<type>Link</type>
			<link>
				<text>Learn more</text>
				<url>http://www.entando.com/</url>
				<symbolicLink>
					<symbolicDestination>#!U;http://www.entando.com/!#</symbolicDestination>
				</symbolicLink>
			</link>
		</attribute>
		
	</attributes>
	<lastEditor>admin</lastEditor>
</content>
