<content>
	<description>Sample</description>
	<typeCode>MPC</typeCode>
	<typeDescription>Multi-Purpose Content</typeDescription>
	<mainGroup>free</mainGroup>
	<attributes>
		<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbTextAttribute">
			<name>title</name>
			<type>Text</type>
			<value>Hello, world!</value>
			<roles>
				<role>jacms:title</role>
			</roles>
		</attribute>
		<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbHypertextAttribute">
			<name>abstract</name>
			<type>Hypertext</type>
			<htmlValue><![CDATA[<p>This is a template for multi purpose content.</p>]]></htmlValue>
		</attribute>
		<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbListAttribute">
			<name>paragraphs</name>
			<type>Monolist</type>
			<nestedAttribute>
				<code>paragraphs</code>
				<type>Composite</type>
				<compositeAttributes>
					<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbTextAttribute">
						<type>Text</type>
						<name>ptitle</name>
						<value>Sample paragraph title</value>
					</attribute>
					<attribute>
						<type>Hypertext</type>
						<name>pmain</name>
						<htmlValue><![CDATA[<p>This is a sample paragraph body.</p>]]></htmlValue>
					</attribute>
					<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbResourceAttribute">
						<type>Image</type>
						<name>pimage</name>
						<resource>
							<text>The very first Entando Logo in an artistic reprise</text>
							<path>/test-image-rest/resources/cms/images/sample-image-1_d0.jpg</path>
							<resourceId>logoDarkBlue</resourceId>
							<restResourcePath>http://localhost:8080/test-image-rest/api/rs/en/jacms/image?id=logoDarkBlue</restResourcePath>
						</resource>						
					</attribute>
					<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbTextAttribute">
						<type>Text</type>
						<name>pcaption</name>
						<value>One caption to rule 'em all</value>
					</attribute>
				</compositeAttributes>
			</nestedAttribute>
		</attribute>
		<attribute xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="jaxbListAttribute">
			<name>links</name>
			<type>Monolist</type>
			<attributes>
				<attribute xsi:type="jaxbLinkAttribute">
					<name>Links</name>
					<type>Link</type>
					<link>
						<text>Learn more</text>
						<url>http://www.entando.com/</url>
						<symbolicLink>
							<symbolicDestination>#!U;http://www.entando.com/!#</symbolicDestination>
						</symbolicLink>
					</link>
				</attribute>
			</attributes>
		</attribute>
	</attributes>
	<lastEditor>admin</lastEditor>
</content>
